@model TruckControl.Models.TruckViewModel

@{
    ViewData["Title"] = "Excluir";
}

<h1>Deletar</h1>
<p class="text-danger">@ViewData["ErrorMessage"]</p>
<h3>Tem certeza que deseja excluir este caminhão?</h3>
<div>
    <h4>Caminhão</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TruckName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TruckName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TruckModelName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TruckModelName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModelYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModelYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductionYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductionYear)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
