@model TruckControl.Models.RegisterTruckViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Caminhão</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TruckName" class="control-label"></label>
                <input asp-for="TruckName" class="form-control" />
                <span asp-validation-for="TruckName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModelYear" class="control-label"></label>
                <input asp-for="ModelYear" class="form-control" />
                <span asp-validation-for="ModelYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TruckModelId" class="control-label"></label>
                <select asp-for="TruckModelId" class="form-control" asp-items="ViewBag.TruckModels">
                    <option value="">-- Selecione o modelo --</option>
                </select>
                <span asp-validation-for="TruckModelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>
